<html>
	<head>
		<title>Deadshot</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<style type="text/css">
			table#tbl a { display:block; width: 98%; height: 100px; font-size: 3em !important; text-align: center; }
			.cen { text-align: center; }
			.resultado { font-size: 2em; }
		</style>
	</head>
<body>

	<div class="container">

		<h1><i class="glyphicon glyphicon-screenshot"></i> Deadshot</h1>

		<div class="<%= @hideJuego %>">
			<h2>Intentos <%= @@juego.contador_intentos  %> de  <%= @@juego.total_intentos  %></h2>
	
			<h2 class="cen">Haga clic a la posici√≥n que quiere disparar</h2>

			<table id="tbl" width="100%" align="center" cellpadding="20" cellspacing="5" border="0">
				<tr>

					<% for i in 1..@@nPosiciones 
						if i == @posicion
							@activo = "disabled"
						else
							@activo = ""
						end
					%>
					<td class="warning"> 
						<a href="/disparar?p=<%= i %>" class="btn btn-lg btn-info <%= @activo %>">
							<%= i %>
						</a>
					</td>
					<% end %>
				</tr>
			</table>
		</div>		
		<hr />
		<div class="alert alert-<%= @alerta %> cen">
			<h2 class="resultado"><%= @resultado %></h2>
			<h2 class="<%= @hideMsg %>"><a href="/">Jugar de nuevo</a></h2>
		</div>
		
	</div>

</body>

</html>
